    <!-- Reasons why permission READ_PHONE_STATE should be granted -->
    <string name="reasonReadPhoneStateTitle">Why this permission?</string>
    <string name="reasonReadPhoneStateText">\'&constStatus;\' and \'&constPrefsMuteOffHook;\' has been
        selected. So MindBell turns the bell in the notification bar to be shown upside down when a
        phone call is incoming or outgoing.\n\nTo achieve this, MindBell has to be informed of
        calls. Only when permission READ_PHONE_STATE is granted MindBell can be kept informed.\n\nIf the
        permission is denied either \'&constStatus;\' or \'&constPrefsMuteOffHook;\' must be switched off.</string>

    <!-- Permission READ_PHONE_STATE denied but user checked 'never ask again' -->
    <string name="neverAskAgainReadPhoneStateTitle">Missing permission</string>
    <string name="neverAskAgainReadPhoneStateText">Permission READ_PHONE_STATE is not granted. Therefore
        either \'&constStatus;\' or \'&constPrefsMuteOffHook;\' must be switched off.</string>

    <!-- Reasons why permission READ_EXTERNAL_STORAGE should be granted -->
    <string name="reasonReadExternalStorageTitle">Why this permission?</string>
    <string name="reasonReadExternalStorageText">\'&constUseStandardBell;\' has been deselected. Only when permission
        READ_EXTERNAL_STORAGE is granted MindBell can access your notification ringtones.\n\nIf the permission is denied
        \'&constUseStandardBell;\' must be switched on.</string>

    <!-- Permission READ_EXTERNAL_STORAGE denied but user checked 'never ask again' -->
    <string name="neverAskAgainReadExternalStorageTitle">Missing permission</string>
    <string name="neverAskAgainReadExternalStorageText">Permission READ_EXTERNAL_STORAGE is not granted. Therefore
        \'&constUseStandardBell;\' must be switched on.</string>

