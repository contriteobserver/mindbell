    <!-- Reasons why permission READ_PHONE_STATE should be granted -->
    <string name="reasonReadPhoneStateTitle">Why this permission?</string>
    <string name="reasonReadPhoneStateText">\'Show status icon\' and \'Mute during phone calls\' has been
        selected. That means that MindBell turns over the bell in the notification bar when a phone
        call is incoming or outgoing. To achieve this, MindBell has to be informed of calls. Only when
        permission READ_PHONE_STATE is granted MindBell can be kept informed. If the permission is denied
        either \'Show status icon\' or \'Mute during phone calls\' must be switched off.</string>

    <!-- Permission READ_PHONE_STATE denied but user checked 'never ask again' -->
    <string name="neverAskAgainReadPhoneStateTitle">Missing permission</string>
    <string name="neverAskAgainReadPhoneStateText">Permission READ_PHONE_STATE is not granted. Therefore
        either \'Show status icon\' or \'Mute during phone calls\' must be switched off.</string>

    <!-- Permission READ_PHONE_STATE requested after displaying popup dialog -->
    <string name="requestReadPhoneStateTitle">Asking for permission</string>
    <string name="requestReadPhoneStateText">Permission READ_PHONE_STATE is not granted yet. Therefore
        either \'Show status icon\' or \'Mute during phone calls\' must be switched off in the settings.
        Do you want to grant it now?</string>

