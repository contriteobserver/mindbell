<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mindful="http://dknapps.de/ns">

    <PreferenceScreen android:title="@string/prefsCategoryMuteRules">

        <CheckBoxPreference
            android:key="@string/keyMuteWithPhone"
            android:summaryOff="@string/summaryNoMuteWithPhone"
            android:summaryOn="@string/summaryMuteWithPhone"
            android:title="@string/prefsMuteWithPhone"/>
        <CheckBoxPreference
            android:key="@string/keyMuteWithAudioStream"
            android:summaryOff="@string/summaryNoMuteWithAudioStream"
            android:summaryOn="@string/summaryMuteWithAudioStream"
            android:title="@string/prefsMuteWithAudioStream"/>
        <CheckBoxPreference
            android:key="@string/keyMuteOffHook"
            android:summaryOff="@string/summaryNotMuted"
            android:summaryOn="@string/summaryMuted"
            android:title="@string/prefsMuteOffHook"/>
        <CheckBoxPreference
            android:key="@string/keyMuteInFlightMode"
            android:summaryOff="@string/summaryNotMutedInFlightMode"
            android:summaryOn="@string/summaryMutedInFlightMode"
            android:title="@string/prefsMuteInFlightMode"/>
        <CheckBoxPreference
            android:key="@string/keyNoSoundOnMusic"
            android:summaryOff="@string/summaryNotNoSoundOnMusic"
            android:summaryOn="@string/summaryNoSoundOnMusic"
            android:title="@string/prefsNoSoundOnMusic"/>
        <CheckBoxPreference
            android:key="@string/keyPauseAudioOnSound"
            android:summaryOff="@string/summaryNotPauseAudioOnSound"
            android:summaryOn="@string/summaryPauseAudioOnSound"
            android:title="@string/prefsPauseAudioOnSound"/>

    </PreferenceScreen>

    <PreferenceScreen android:title="@string/prefsCategoryMeditation">

        <!-- keyMeditating can only be toggled by the meditation button -->

        <com.googlecode.mindbell.preference.ListPreferenceWithSummaryFix
            android:defaultValue="3"
            android:entries="@array/meditationBellEntries"
            android:entryValues="@array/meditationBellEntryValues"
            android:key="@string/keyMeditationBeginningBell"
            android:summary="%s"
            android:title="@string/prefsMeditationBeginningBell"/>

        <com.googlecode.mindbell.preference.ListPreferenceWithSummaryFix
            android:defaultValue="1"
            android:entries="@array/meditationBellEntries"
            android:entryValues="@array/meditationBellEntryValues"
            android:key="@string/keyMeditationInterruptingBell"
            android:summary="%s"
            android:title="@string/prefsMeditationInterruptingBell"/>

        <com.googlecode.mindbell.preference.ListPreferenceWithSummaryFix
            android:defaultValue="2"
            android:entries="@array/meditationBellEntries"
            android:entryValues="@array/meditationBellEntryValues"
            android:key="@string/keyMeditationEndingBell"
            android:summary="%s"
            android:title="@string/prefsMeditationEndingBell"/>

        <com.googlecode.mindbell.preference.MediaVolumePreference
            android:dialogTitle="@string/prefsMeditationVolume"
            android:key="@string/keyMeditationVolume"
            android:title="@string/prefsMeditationVolume"
            mindful:ringtone="@raw/mindbell_b"
            mindful:streamType="4"/>

    </PreferenceScreen>

    <PreferenceScreen android:title="@string/prefsCategoryProblemSolving">

        <Preference
            android:icon="@drawable/ic_help_white_24dp"
            android:key="@string/keyFAQ"
            android:layout="@layout/preference"
            android:summary="@string/summaryFAQ"
            android:title="@string/prefsFAQ"/>
        <Preference
            android:icon="@drawable/ic_info_white_24dp"
            android:key="@string/keyBatterySettings"
            android:layout="@layout/preference"
            android:summary="@string/summaryBatterySettings"
            android:title="@string/prefsBatterySettings"/>
        <CheckBoxPreference
            android:key="@string/keyUseWorkaroundBell"
            android:summaryOff="@string/summaryDontUseWorkaroundBell"
            android:summaryOn="@string/summaryUseWorkaroundBell"
            android:title="@string/prefsUseWorkaroundBell"/>
        <Preference
            android:icon="@drawable/ic_mail_outline_white_24dp"
            android:key="@string/keySendMail"
            android:layout="@layout/preference"
            android:summary="@string/summarySendMail"
            android:title="@string/prefsSendMail"/>

    </PreferenceScreen>

</PreferenceScreen>
