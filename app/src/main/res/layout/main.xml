<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mindbell="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff0f0f41"
            android:gravity="right">

            <TextView
                android:id="@+id/tvExplanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/semitransparent"
                android:padding="20px"
                android:text="@string/explanation"/>

            <TextView
                android:id="@+id/tvHowToRing"
                style="@android:style/TextAppearance.DeviceDefault.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tvExplanation"
                android:layout_centerHorizontal="true"
                android:padding="20px"
                android:text="@string/howToRing"
                android:textColor="#ffffffff"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/tvExplanation"
                android:scaleType="centerInside"
                android:src="@drawable/bell"/>

        </RelativeLayout>

        <com.googlecode.mindbell.CountdownView
            android:id="@+id/countdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff0f0f41"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            mindbell:meditationColor="#FF6600"
            mindbell:meditationSize="144sp"
            mindbell:rampUpColor="#00FF00"
            mindbell:rampUpSize="144sp"/>

    </ViewFlipper>

</LinearLayout>
