<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mindbell="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.googlecode.mindbell.view.CountdownView
        android:id="@+id/countdownView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        mindbell:bellColor="@color/textColor"
        mindbell:beyondColor="@color/dknapps_de_green"
        mindbell:beyondSize="144sp"
        mindbell:meditationColor="@color/dknapps_de_orange"
        mindbell:meditationSize="144sp"
        mindbell:rampUpColor="@color/dknapps_de_yellow"
        mindbell:rampUpSize="144sp"/>

</LinearLayout>
